/* *****************************************
1. Crear un vector que no tenga valores
2. que te pida desde la consola el tamaño del vector
3. que los puedas dar valores desde la consola.
4. mostrar los valores en la consola.
*****************************************/

#include <iostream>
#include <vector>

using namespace std;

int main() {
    vector<int> numeros;
    int cantidad;
    
    cout << "Ingrese el tamaño del vector: ";
    cin >> cantidad;
    
    for (int i = 0; i < cantidad; i++) { 
        int numero;
        cout << "Ingrese un numero: ";
        cin >> numero;
        numeros.push_back(numero); 
    }

    cout << "Los numeros ingresados son: ";
    for (int i = 0; i < numeros.size(); i++) { // Iterar sobre el vector para mostrar los valores
        cout << numeros[i] << " ";
    }
    
    cout << endl; // Agregar un salto de línea al final
    return 0;
}
